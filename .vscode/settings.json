{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": ".rs",
                "isAsync": false,
                "cmd": "rustc --test --o ${workspaceFolder}/target/test ${file} && ${workspaceFolder}/target/test && git add -A && git commit -m 'TCR' || git reset --hard"
            }
        ]
    },
    "rust-analyzer.files.watcher": "server",
    "files.watcherExclude": {
        "**/target/*/**": true
    },
    "rust-analyzer.files.excludeDirs": [
        "target"
    ],
    "rust-analyzer.showUnlinkedFileNotification": false
}