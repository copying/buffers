{
    "emeraldwalk.runonsave": {
        "commands": [
            {
                "match": "\\.rs",
                "isAsync": false,
                "cmd": "(cd ${workspaceFolder}; ./tcr.sh)"
            }
        ]
    },
    "rust-analyzer.files.watcher": "client",
    "files.watcherExclude": {
        "**/target/*/**": true,
        "Cargo.lock": true,
    },
    "rust-analyzer.files.excludeDirs": [
        "target"
    ],
    "rust-analyzer.showUnlinkedFileNotification": false
}